<%= stylesheet_link_tag 'redmine_oauth', plugin: 'redmine_oauth' %>
<% if RedmineOauth.hide_login_form? %>
  <%= javascript_include_tag('redmine_oauth.js', plugin: :redmine_oauth) %>
  <fieldset id= "oauth-fieldset-login-form" class="oauth_collapsible oauth_collapsed">
    <legend class="oauth_legend" onclick="oauth_toggle_fieldset(this)"><%= l(:button_login) %></legend>
  </fieldset>
<% end %>
<div id="oauth-form">
  <%= form_tag(oauth_path(back_url: back_url), method: :get, id: 'oauth-login') do %>
    <div id="oauth-form-buttons">
    <% OauthProvider.sorted.all.each_with_index do |oauth_provider, i| %>
        <%= button_tag(name: 'oauth_provider', value: oauth_provider.id, tabindex: i + 7,
                       id: "login-oauth-submit-#{oauth_provider.id}",
                       title: l(:oauth_login_with), style: "background: #{oauth_provider.button_color}") do %>
          <i id="button_icon" class="<%= oauth_provider.button_icon %>"></i>
          <% str = oauth_provider.button_text.presence || l(:oauth_login_via, oauth: oauth_provider.custom_name) %>
          <%= str.html_safe %>
        <% end %>
    <% end %>
    </div>
    <% if RedmineOauth.oauth_login? %>
      <label for="oauth_autologin">
        <%= check_box_tag 'oauth_autologin', 1, false, tabindex: 6 %>
        <%= l(:oauth_autologin) %>
      </label>
    <% end %>
  <% end %>
</div>

<%= javascript_tag do %>
  <%# Autologin option %>
  $('#autologin').change(function() {
    let oauth_login_form = $("#oauth-login")
    if(oauth_login_form && this.checked) {
      $('<input>', {
        type: 'hidden',
        id: 'autologin',
        name: 'autologin',
        value: '1'
      }).appendTo(oauth_login_form);
    }
    else{
        let hidden_tag = $('input:hidden[name="autologin"]');
        if(hidden_tag){
          hidden_tag.remove();
        }
    }
  });
  <%# Hidden login form %>
  <% if RedmineOauth.hide_login_form? %>
    let login_form = $('div#login-form');
    login_form.appendTo('#oauth-fieldset-login-form');
    login_form.toggle();
  <% end %>

  <% if RedmineOauth.oauth_only_login? %>
    document.getElementById('oauth-login').submit();
  <% end %>
<% end %>
